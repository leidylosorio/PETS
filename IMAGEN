public class Mascota {
    private String nombre;
    private int imagen; // Puedes utilizar un recurso de imagen o la URL de una imagen
    private int numeroMascota;

    public Mascota(String nombre, int imagen, int numeroMascota) {
        this.nombre = nombre;
        this.imagen = imagen;
        this.numeroMascota = numeroMascota;
    }

    public String getNombre() {
        return nombre;
    }

    public int getImagen() {
        return imagen;
    }

    public int getNumeroMascota() {
        return numeroMascota;
    }
}
